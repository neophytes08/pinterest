          <div class="panel-heading">
            <h2> Please complete the information below to be able</h2>
          </div>

          <div class="panel-body">
              <%= simple_form_for(@profile, html: { multipart: true }) do |f| %>
                <% if @profile.errors.any? %>
                  <h2><%= pluralize(@rofile.errors.count, "error") %> Prevented this User from saving </h2>
